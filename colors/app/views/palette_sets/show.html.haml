.row
  .twelve.columns
    %h2= @palette_set.title
    %ul
      %li
        source:
        %a{href: "http://#{@palette_set.source}.tumblr.com"}= @palette_set.source

    - if user_signed_in?
      - if current_user.try(:palette_sets).try(:include?, @palette_set)
        %p Favorited
      - else
        %form{action: "/users/favorite/#{@palette_set.id}", method: "post"}
          %button{name: "favorite", id: "favorite"} Favorite
    
-# FIXME refactor a la index view
.row.seamless_container
  - @palette_set.palettes.each do |palette|
    .palette
      .palette_img
        %img{src: palette.image_url}
      .swatch_container
        - palette.colors.each do |color|
          .swatch{style: "background-color: #{color};"}
